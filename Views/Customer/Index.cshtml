@model IEnumerable<AJAXExample.Models.CustomerModel>

<style>
    ul{
        list-style-type:none;
    }

    #customerInformationArea {
        border:1px solid black;
        border-radius:5px;
        margin:10px;
        padding:10px;
    }
</style>

<p>Current time: @DateTime.Now</p>
<form asp-action="ShowOnePerson" asp-asp-controller="Customer">
    <ul>
        @foreach(var item in Model)
        {
                <li>
                    <!--Durch das klassifizieren der RadioButtons kann man nun den SubmitButton weglassen und ein SingleClick Event aus
                        den RadioButtons machen!-->
                    <input class="customerRadio" type="radio" name="Id" id="Id" value="@item.Id"/>
                    <label>@item.Name</label>
                </li>
        }
    </ul>
    <input type="submit" id="selectCustomer"/>
</form>

<div id="customerInformationArea">
    <p>Display customer information here.</p>
</div>